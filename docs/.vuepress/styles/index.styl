// 自定义样式
:root
  --primary-color: #1E2A38
  --accent-color: #6C5CE7
  --accent-gradient: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%)
  --bg-color: #F9F9F9
  --card-bg: #FFFFFF
  --text-primary: #333333
  --text-secondary: #666666
  --growth-green: #00B894
  --growth-orange: #FAB1A0
  --border-radius: 12px

// 全局字体
body
  font-family: 'Noto Serif SC', 'Quicksand', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif
  background-color: var(--bg-color)
  color: var(--text-primary)

// 导航栏样式
.navbar, .navbar-fixed
  background: #000000 !important
  backdrop-filter: blur(10px)
  box-shadow: 0 2px 20px rgba(0,0,0,0.1)
  border-bottom: none !important
  
  .navbar-brand, .site-name
    font-family: 'Quicksand', sans-serif
    font-weight: 600
    color: white !important
    
    &::after
      content: ' · Flutter 核心开发者 · 学习内驱力探索者 · 创造力记录者'
      font-size: 0.8rem
      font-weight: 400
      opacity: 0.8
      color: #A29BFE
      margin-left: 0.5rem
    
  .nav-links, .navbar-nav
    background: transparent !important
    
    a, .nav-link
      color: white !important
      font-weight: 500
      transition: all 0.3s ease
      background: transparent !important
      
      &:hover, &.router-link-active, &.active
        color: #A29BFE !important
        background: transparent !important

// 强制覆盖所有导航相关的白色背景
.navbar *
  background-color: transparent !important

.navbar .navbar-brand,
.navbar .nav-links,
.navbar .nav-item,
.navbar .dropdown-wrapper
  background: transparent !important

// 卡片样式
.card
  background: var(--card-bg)
  border-radius: var(--border-radius)
  padding: 1.5rem
  margin: 1rem 0
  box-shadow: 0 4px 20px rgba(0,0,0,0.08)
  transition: all 0.3s ease
  
  &:hover
    transform: translateY(-4px)
    box-shadow: 0 8px 30px rgba(0,0,0,0.12)

// 首页特殊样式
.home
  .hero
    background: var(--accent-gradient)
    color: white
    
    h1
      font-family: 'Quicksand', sans-serif
      font-weight: 700
      
    .description
      font-size: 1.2rem
      opacity: 0.9

.footer-content
  text-align: center
  font-size: 0.8rem
  opacity: 0.6
  position: absolute
  bottom: 2rem
  left: 50%
  transform: translateX(-50%)
  width: 100%

// 隐藏原页脚
.page-edit,
.page-nav,
.footer,
.page .footer,
body .footer
  display: none !important

// 确保整个页面背景一致
body, html
  background: linear-gradient(135deg, #1a1c29 0%, #2d1b69 50%, #11998e 100%)
  min-height: 100vh

.page, .theme-container
  background: transparent !important

// 文章列表页面样式
.page
  .content__default
    h1, h2, h3, h4, h5, h6
      color: white !important
    
    a
      color: white !important
      text-decoration: none
      
      &:hover
        color: #a29bfe !important
        text-decoration: underline
    
    p, li
      color: rgba(255,255,255,0.9)
      line-height: 1.6
    
    ul, ol
      li
        color: rgba(255,255,255,0.9)
    
    // tip提示模块样式
    .tip
      background: rgba(108, 92, 231, 0.15) !important
      border-left: 4px solid #6C5CE7 !important
      color: white !important
      
      .title
        color: #A29BFE !important
        font-weight: 600
      
      p
        color: rgba(255,255,255,0.9) !important
    
    .warning
      background: rgba(255, 193, 7, 0.15) !important
      border-left: 4px solid #ffc107 !important
      color: white !important
      
      .title
        color: #ffc107 !important
        font-weight: 600
      
      p
        color: rgba(255,255,255,0.9) !important
    
    .danger
      background: rgba(220, 53, 69, 0.15) !important
      border-left: 4px solid #dc3545 !important
      color: white !important
      
      .title
        color: #dc3545 !important
        font-weight: 600
      
      p
        color: rgba(255,255,255,0.9) !important

// 自定义首页样式
.homepage
  margin: 0
  padding: 0
  width: 100vw
  position: relative
  left: 50%
  right: 50%
  margin-left: -50vw
  margin-right: -50vw

.hero-section
  height: 100vh
  width: 100vw
  background: linear-gradient(135deg, #1a1c29 0%, #2d1b69 50%, #11998e 100%)
  color: white
  margin: 0
  padding: 0

.hero-container
  width: 100vw
  min-height: 100vh
  display: flex
  justify-content: center
  align-items: flex-start
  margin: 0
  padding: 2rem 0
  box-sizing: border-box

.hero-content
  max-width: 1600px
  width: 90%
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 4rem

.hero-left
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start
  padding: 2rem 2rem 2rem 3rem
  text-align: left

.hero-right
  display: flex
  flex-direction: column
  justify-content: center
  gap: 1.2rem
  padding: 2rem

.avatar-wrapper
  position: relative
  width: 180px
  height: 180px
  margin-bottom: 1.5rem

.avatar-bg
  width: 100%
  height: 100%
  background: rgba(255,255,255,0.15)
  border-radius: 50%
  backdrop-filter: blur(15px)
  border: 3px solid rgba(255,255,255,0.3)
  box-shadow: 0 8px 32px rgba(0,0,0,0.3)

.avatar-icon
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 80%
  height: 80%
  border-radius: 50%
  object-fit: cover
  animation: float 3s ease-in-out infinite

.avatar-fallback
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  font-size: 4rem
  animation: float 3s ease-in-out infinite

@keyframes float
  0%, 100%
    transform: translate(-50%, -50%) translateY(0px)
  50%
    transform: translate(-50%, -50%) translateY(-8px)

.status-section
  margin-bottom: 1rem

.status-badge
  background: rgba(255,255,255,0.1)
  padding: 0.4rem 0.8rem
  border-radius: 15px
  font-size: 0.8rem
  margin-bottom: 0.5rem
  cursor: pointer
  transition: all 0.3s ease
  
  &:hover
    background: rgba(255,255,255,0.2)

.status-options
  display: none
  flex-direction: column
  gap: 0.3rem
  
  &.show
    display: flex

.status-option
  background: rgba(255,255,255,0.08)
  padding: 0.3rem 0.6rem
  border-radius: 12px
  font-size: 0.75rem
  cursor: pointer
  transition: all 0.3s ease
  
  &:hover
    background: rgba(255,255,255,0.15)
    transform: translateX(5px)

.personal-intro
  background: rgba(255,255,255,0.05)
  padding: 1rem
  border-radius: 12px
  margin-bottom: 1rem
  backdrop-filter: blur(10px)
  
  p
    font-size: 0.95rem
    line-height: 1.5
    margin: 0 0 0.8rem 0
    opacity: 0.9
    
    &:last-child
      margin-bottom: 0

.tags-section
  display: flex
  gap: 0.5rem
  flex-wrap: wrap
  margin-bottom: 1rem
  justify-content: flex-start

.tag
  background: rgba(255,255,255,0.15)
  color: white
  padding: 0.4rem 0.8rem
  border-radius: 12px
  font-size: 0.85rem
  backdrop-filter: blur(10px)

.skills-section h3,
.advantages-section h3,
.timeline-section h3
  font-size: 1.1rem
  margin: 0 0 0.8rem 0
  font-family: 'Quicksand', 'Microsoft YaHei', '微软雅黑', sans-serif

.skills-grid
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 0.6rem

.skill-item
  display: flex
  align-items: center
  gap: 0.6rem
  background: rgba(255,255,255,0.08)
  padding: 0.6rem
  border-radius: 8px

.skill-icon
  font-size: 1.2rem

.skill-name
  font-size: 0.8rem
  font-weight: 500

.skill-level
  font-size: 0.7rem
  opacity: 0.7

.advantages-grid
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 0.6rem

.advantage-card
  display: flex
  align-items: center
  gap: 0.6rem
  background: rgba(108, 92, 231, 0.15)
  padding: 0.6rem
  border-radius: 8px

.advantage-icon
  font-size: 1rem

.advantage-text
  font-size: 0.8rem

.timeline
  display: flex
  gap: 1rem
  align-items: center

.timeline-item
  display: flex
  flex-direction: column
  align-items: center
  gap: 0.3rem
  flex: 1

.timeline-year
  font-size: 0.7rem
  font-weight: 600
  color: #a29bfe

.timeline-node
  width: 8px
  height: 8px
  border-radius: 50%
  background: rgba(255,255,255,0.3)
  
  &.active
    background: #a29bfe
    box-shadow: 0 0 8px rgba(162, 155, 254, 0.5)

.timeline-desc
  font-size: 0.65rem
  opacity: 0.8
  text-align: center

.actions-section
  display: flex
  gap: 0.8rem
  flex-wrap: wrap

.action-btn
  padding: 0.6rem 1.2rem
  border-radius: 20px
  text-decoration: none
  font-weight: 600
  font-size: 0.8rem
  transition: all 0.3s ease
  
  &.primary
    background: linear-gradient(135deg, #6C5CE7, #A29BFE)
    color: white
  
  &.secondary
    background: rgba(255,255,255,0.1)
    color: white
    border: 1px solid rgba(255,255,255,0.3)
  
  &:hover
    transform: translateY(-2px)

.avatar-name-section
  display: flex
  align-items: center
  gap: 1rem
  margin: 1rem 0 1rem 0

.name-motto-section
  display: flex
  flex-direction: column
  gap: 0.5rem

.hero-name-left
  font-size: 2.2rem
  font-weight: 700
  font-family: 'Quicksand', 'Microsoft YaHei', '微软雅黑', sans-serif
  background: linear-gradient(45deg, #fff, #a29bfe)
  -webkit-background-clip: text
  -webkit-text-fill-color: transparent

.name-motto
  font-size: 0.8rem
  font-style: italic
  opacity: 0.7
  color: #a29bfe
  line-height: 1.3

// 响应式布局
@media (max-width: 1200px)
  .hero-content
    max-width: 900px
    width: 90%
  
  .hero-left
    padding: 1.5rem 1.5rem 2rem 2rem
  
  .hero-right
    padding: 1.5rem 2rem 2rem 1.5rem

@media (max-width: 900px)
  .hero-container
    padding: 2rem 1rem
  
  .hero-content
    grid-template-columns: 1fr
    gap: 2rem
    max-width: 600px
    width: 90%
  
  .hero-left
    order: 1
  
  .hero-right
    order: 2
    padding: 1rem 0
  
  .skills-section,
  .advantages-section,
  .timeline-section
    margin-bottom: 2rem

@media (max-width: 768px)
  .hero-left
    padding: 1rem 1rem 2rem 1rem
  
  .hero-content
    max-width: 500px
    width: 95%
  
  .avatar-name-section
    flex-direction: column
    align-items: center
    gap: 1rem
    text-align: center
    margin: 1rem 0 1rem 0
  
  .name-motto-section
    align-items: center
  
  .hero-name-left
    font-size: 1.8rem
  
  .name-motto
    font-size: 0.75rem
    text-align: center

@media (max-width: 480px)
  .hero-content
    max-width: 400px
    width: 100%
  
  .avatar-wrapper
    width: 120px
    height: 120px
  
  .hero-name-left
    font-size: 1.5rem
  
  .tags-section
    justify-content: center
  
  .tag
    font-size: 0.75rem
    padding: 0.3rem 0.6rem